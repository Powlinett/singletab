{
  "manifest_version": 2,
  "name": "SingleTab",
  "description": "All your tabs in one map.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": { // On rajoute le param√®tre "background"
     "scripts": ["javascript/background.js"]
     },

  "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["javascript/contentscript.js"]
   }
  ],

  "permissions": [
   "tabs",
   "*://*/*",
   "http://localhost:3000/",
   "processes"
 ]
}
