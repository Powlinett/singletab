<div class="nav-links">
  <%= link_to '< Back', folders_path %>
</div>

<div class="form-container">
  <h1 id="form-title">Editing folder</h1>

   <% array = [] %>
   <%  @parantfolder.each do |fp| %>
     <% array << fp.id %>
   <% end %>


  <%= simple_form_for(@folder) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :name %>
    <div class="categories-button">
    <%= f.input :weight, as: :radio_buttons, collection: [1, 2, 3], wrapper: false %>
    </div>
    <div class="categories-button">
    <%= f.input :parent_id, as: :radio_buttons, collection: array, wrapper: false %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, id: "submit-button", class: "btn btn-secondary"%>
   </div>
<% end %>
</div>

