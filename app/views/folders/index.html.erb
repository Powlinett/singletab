<%= link_to 'data', data_path  %>
<%= link_to 'visualisation', visualisation_path  %>

  <div class="container">
    <h2>All your maps here, <%= current_user.username %></h2>
  </div>

<%= render "layouts/searchbar" %>

<% @folders.each do |folder| %>
  <div class="folder-header">
    <h3><%= link_to folder.name, folder_path(folder) %></h3>
    <div class="notification-actions">
      <%= link_to '', edit_folder_path(folder), class: "fas fa-edit" %>
    </div>
  </div>


<div class="tabs-list">
  <ul>
  <% folder.tabs.each do |tab| %>
    <%= render 'folders/tabslist', tab: tab %>
  <% end %>
  </ul>
</div>

<% end %>
